{
  "expo": {
    "name": "R ÃŠ V E",
    "slug": "revee",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4d4fff",
      "newArchEnabled": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/NotoKufiArabic-Regular.ttf",
            "./assets/fonts/NotoKufiArabic-Bold.ttf",
            "./assets/fonts/NotoKufiArabic-Light.ttf",
            "./assets/fonts/NotoKufiArabic-Thin.ttf",
            "./assets/fonts/NotoKufiArabic-SemiBold.ttf",
            "./assets/fonts/NotoKufiArabic-Medium.ttf",
            "./assets/fonts/Amiri-Regular.ttf"
          ]
        }
      ],
      "expo-localization"
    ],
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/0af3e503-7860-4c07-af19-b9351cd6035f"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.REVEsyria.Reve"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "57bf44a3-fb5e-43a4-9c25-f51001e34d41"
      }
    },
    "owner": "reveee",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
